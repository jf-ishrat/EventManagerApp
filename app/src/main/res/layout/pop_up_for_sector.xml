<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/headNameEditId"
        android:paddingLeft="?android:expandableListPreferredChildPaddingLeft"
        android:textSize="20sp"
        android:hint="Name of sector head"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_round"
        />
    <EditText
        android:id="@+id/headCodeId"
        android:paddingLeft="?android:expandableListPreferredChildPaddingLeft"
        android:textSize="20sp"
        android:hint="Code for sector head"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_round"
        />
    <EditText
        android:id="@+id/volunteerCodeId"
        android:paddingLeft="?android:expandableListPreferredChildPaddingLeft"
        android:textSize="20sp"
        android:hint="Code for volunteer"
        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_round"
        />



</LinearLayout>